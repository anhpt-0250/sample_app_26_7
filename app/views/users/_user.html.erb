<li>
  <%= gravatar_for user, size: Settings.degit.size_avatar %>
  <%= link_to user.name, user %>
  <% if can_destroy_user? user %>
    <%= link_to t("delete"), user, data: { "turbo-method": :delete, 
                                           turbo_confirm: t("you_sure")}
    %>
  <% end %>
</li>
